<div class="footer">
  <div class="description">
      <div class="contact-info">
        <%=I18n.t('contacts.address_number') %>
        <%= link_to t('header.phone'), "tel:#{t('header.phone')}", class: 'phone-number' %>
      </div>
      <div class="direction-center-description">
        <div class="center-name"><h3><%= t('footer.center_name') %></h3></div>
        <div class="direction-name-title">
          <h2><%= t('activerecord.models.directions')%></h2>
          <div class="directions-name-container">
            <div class="directions-name">
              <%- @directions.each_with_index do |direction| %>
                <p><%= link_to direction.name, direction_path(direction) %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
