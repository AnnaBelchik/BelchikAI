<div class="landing">
  <div class="welcome-container">
    <div class="content">
      <div class="welcome-message">
        <h1><b><%= t('landing.welcome') %></b></h1>
      </div>
      <div class="welcome-description">
        <h3><%= t('landing.description') %></h3>
      </div>
    </div>
  </div>
  <hr>
  <div class="discount-container">
    <div class="discount-title">
      <h1><b><%= t('landing.discount_title') %></b></h1>
    </div>
    <div class="discount-description">
      <h3><%= t('landing.discount_description') %></h3>
    </div>
  </div>
  <div class="directions-container">
    <div class="directions-title"><h1><b><%= t('landing.direction_title') %></b></h1></div>
    <div class="directions-description">
      <%- @directions.each do |direction| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag(direction.image, class: "card-img-top") if direction.image.attached?%>
          <div class="card-body">
            <h5 class="card-title"><%= direction.name %></h5>
            <%= link_to '+', direction_path(direction), class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="doctors-container">
    <div class="doctors-title"><h1><b><%= t('landing.doctor_title') %></b></h1></div>
    <div class="doctors-description">
      <%- @doctors.each do |doctor| %>
        <div class="card" style="width: 18rem;">
          <%= image_tag(doctor.avatar, class: "card-img-top") if doctor.avatar.attached?%>
          <div class="card-body">
            <h5 class="card-title"><%= "#{doctor.surname} #{doctor.forname} #{doctor.middle_name}" %></h5>
            <%- doctor.specializations.each do |specialization| %>
              <%= specialization.name %>
            <% end %>
            <br>
            <%= doctor.category %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="question-container">
    <div class="question-title"><h1><b><%= t('landing.question_title') %></b></h1></div>
    <div class="question-text-description">
      <h3><%= t('landing.question_description') %></h3>
    </div>
    <div class="question-description">
      <%= bootstrap_form_with model: @guest_question do |f| %>
        <div class="guest-question-info">
          <div class="form-group">
            <%= f.text_field :name, bootstrap: { label: { hide: true} },
                             placeholder: t('guest_quesion.inputs.name'), class: 'form-control' %>
          </div>
          <div class="form-group phone-number">
            <%= f.text_field :phone,  bootstrap: { label: { hide: true} },
                             placeholder: t('guest_quesion.inputs.phone'), class: 'form-control' %>
          </div>
        </div>
        <div class="guest-question-text form-group">
          <%= f.text_area :question,  bootstrap: { label: { hide: true} },
                        placeholder: t('guest_quesion.inputs.question'), class: 'form-control' %>
        </div>
        <div class="guest-question-submit">
          <%= f.submit t('guest_quesion.inputs.button'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
